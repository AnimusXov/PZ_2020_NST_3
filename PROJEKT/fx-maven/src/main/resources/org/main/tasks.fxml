<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="anchorPane" prefHeight="638.0" prefWidth="971.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.main.TasksController">
   <children>
      <TableView fx:id="tasksList" editable="true" layoutY="94.0" prefHeight="411.0" prefWidth="971.0">
        <columns>
          <TableColumn fx:id="name" onEditCommit="#changeNameCellEvent" prefWidth="75.0" text="Nazwa" />
            <TableColumn fx:id="index" onEditCommit="#changeIndexCellEvent" prefWidth="75.0" text="Indeks" />
            <TableColumn fx:id="quantity" onEditCommit="#changeQuantityCellEvent" prefWidth="75.0" text="Ilość" />
            <TableColumn fx:id="count" onEditCommit="#changeCountCellEvent" prefWidth="75.0" text="Ile Zr." />
            <TableColumn fx:id="status" onEditCommit="#changeStatusCellEvent" prefWidth="75.0" text="Stan" />
            <TableColumn fx:id="priority" onEditCommit="#changeStatusCellEvent" prefWidth="75.0" text="Piorytet" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <Separator layoutX="-2.0" layoutY="88.0" prefHeight="13.0" prefWidth="971.0" />
      <Separator layoutX="-2.0" layoutY="500.0" prefHeight="13.0" prefWidth="971.0" />
      <HBox layoutX="12.0" layoutY="513.0" prefHeight="56.0" prefWidth="465.0" spacing="15.0">
         <children>
            <Button fx:id="add_task" mnemonicParsing="false" onAction="#handleAddButtonAction" text="Dodaj" textAlignment="CENTER" />
            <Button fx:id="delete_task" mnemonicParsing="false" onAction="#handleDeleteButtonAction" text="Usuń" textAlignment="CENTER" />
            <Button fx:id="confirm_changes" mnemonicParsing="false" onAction="#handleEditButtonAction" text="Zatwierdź Zmiany" textAlignment="CENTER" />
         </children>
      </HBox>
      <HBox layoutX="12.0" layoutY="566.0" prefHeight="33.0" prefWidth="948.0" spacing="10.0">
         <children>
            <TextField fx:id="name_txtField" />
            <TextField fx:id="index_txtField" />
            <TextField fx:id="quanity_txtField" />
            <TextField fx:id="done_txtField" />
            <TextField fx:id="status_txtField" />
            <TextField fx:id="priority_txtField" />
         </children>
      </HBox>
      <Label alignment="BASELINE_CENTER" contentDisplay="CENTER" layoutX="68.0" layoutY="596.0" text="Nazwa" />
      <Label layoutX="233.0" layoutY="596.0" text="Indeks" />
      <Label layoutX="391.0" layoutY="596.0" text="Ilość" />
      <Label layoutX="527.0" layoutY="596.0" text="Ile Zrobiono." />
      <Label layoutX="712.0" layoutY="596.0" text="Stan" />
      <Label layoutX="860.0" layoutY="596.0" text="Piorytet" />
      <ComboBox fx:id="comboBox" layoutX="402.0" layoutY="513.0" onAction="#comboAction" prefWidth="150.0" />
   </children>
</AnchorPane>
