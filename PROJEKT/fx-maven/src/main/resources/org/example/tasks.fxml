<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.TasksController">
   <children>
      <TableView fx:id="tasksList" editable="true" layoutX="100.0" layoutY="100.0" prefHeight="400.0" prefWidth="600.0">
        <columns>
          <TableColumn fx:id="id" prefWidth="75.0" text="ID" />
          <TableColumn fx:id="name" prefWidth="75.0" text="Nazwa" />
            <TableColumn fx:id="index" prefWidth="75.0" text="Indeks" />
            <TableColumn fx:id="quantity" prefWidth="75.0" text="Ilość" />
            <TableColumn fx:id="count" prefWidth="75.0" text="Ile Zr." />
            <TableColumn fx:id="status" prefWidth="75.0" text="Stan" />
            <TableColumn fx:id="priority" prefWidth="75.0" text="Piorytet"  />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <ChoiceBox fx:id="actionBox" accessibleText="Akcja" layoutX="100.0" layoutY="513.0" prefWidth="150.0" />
      <Separator layoutX="-2.0" layoutY="86.0" prefHeight="13.0" prefWidth="800.0" />
      <Separator layoutX="-2.0" layoutY="500.0" prefHeight="13.0" prefWidth="800.0" />
   </children>
</AnchorPane>
